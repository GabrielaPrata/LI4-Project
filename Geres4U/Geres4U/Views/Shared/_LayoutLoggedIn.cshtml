<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Geres4U</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
       
        <div style="padding: 18px;text-align: center;color: white;font-size: 30px;">
            <div class="container">
                <img src="@Url.Content("~/Images/Symbol.png")" style="position:absolute;left:20px;top:20px">
            </div>

             <p style="text-decoration:underline;font-size:20px;position:absolute;color:black;font-weight:bold;left:1200px;top: 20px">Gerês4U</p>
             <p style="font-size:15px;position:absolute;color:grey;left:1100px;top:45px">Descubra e explore o Gerês</p>
             <img src=@Url.Content("~/Images/Logo.png") alt="Fail rendering" style="position: absolute;width: 60px;height: 60px;left: 1334px;top: 12px;" >
        </div>

    </header>

    <p style="position:absolute;width:25%;height:92%;left:0;top:60px;background-color:black"></p>
    <a asp-area="" asp-controller="Client" asp-action="Index" style="font-size:20px;color:white;position:absolute;left:50px;top:100px">Home</a>
    <p style="position: absolute;width: 296px;height: 0px;left: 18px;top: 140px;border: 3px solid #979797;"></p>
    <a asp-area="" asp-controller="Client" asp-action="GetPointsOfInterest" style="font-size:20px;color:white;position:absolute;left:50px;top:180px">Locais a visitar</a>
    <p style="position: absolute;width: 296px;height: 0px;left: 18px;top: 220px;border: 3px solid #979797;"></p>
    <a asp-area="" asp-controller="Client" asp-action="SuggestPointOfInterest" style="font-size:20px;color:white;position:absolute;left:50px;top:260px">Sugerir ponto de interesse</a>
    <p style="position: absolute;width: 296px;height: 0px;left: 18px;top: 300px;border: 3px solid #979797;"></p>
    <a asp-area="" asp-controller="Client" asp-action="GetPointsVisited" style="font-size:20px;color:white;position:absolute;left:50px;top:340px">Histórico de visitas</a>
    <p style="position: absolute;width: 296px;height: 0px;left: 18px;top: 380px;border: 3px solid #979797;"></p>
    <a asp-area="" asp-controller="Client" asp-action="LoggingOut" style="font-size:20px;color:#BF3535;position:absolute;left:50px;top:650px">Terminar Sessão</a>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
