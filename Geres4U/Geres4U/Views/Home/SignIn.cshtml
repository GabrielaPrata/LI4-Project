@model Geres4U.Models.Authentication

@{
    ViewData["Title"] = "SignIn";
}


@if(ViewBag.Result != null)
{
    <p style="font-weight:bold;font-size:14px;position:absolute;left:700px;top:515px;color:red;">@ViewBag.Result</p>
}

<div class="text-center">

    <image src="@Url.Content("~/Images/Logo.png")" alt="Did not render" position=absolute width=296px height=291.06px left=557px top=162px ></image>
    <h1 position=absolute width=246px height=9px left=597px top=526px font-family="Roboto Slab" font-style=normal font-weight=bold font-size=35px line-height=46px color=#000000>Iniciar Sessão</h1>
</div>
    
<hr />
<div class="text-center">
    <div>
        <form asp-action="SignIn">
            <div asp-validation-summary="ModelOnly"></div>
            <div>
                <input asp-for="Email" placeholder="Email" style="position:absolute;width:294px;height:61px;left:620px;top:370px;background:#C4C4C4;border-radius:10px;"/>
                <span asp-validation-for="Email" class="text-danger" style="font-weight:bold;font-size:10px;position:absolute;left:640px;top:430px;"></span>
            </div>
            <div class="form-group">
                <input asp-for="Password" placeholder="Password" style="position: absolute;width: 294px;height: 61px;left:620px;top:450px;background: #C4C4C4;border-radius: 10px;" />
                <span asp-validation-for="Password" class="text-danger" style="font-weight:bold;font-size:10px;position:absolute;left:640px;top:515px;"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" style="color:white;position:absolute;width:100px;height:61px;left: 720px;top: 550px;background: black;border-radius: 10px;" />
            </div>
        </form>

        <p style="position:absolute;left:640px;top:630px">Não tens conta?</p><a asp-action="SignUpClient" style="font-weight:bold;color:black;position:absolute;left:760px;top:630px">Regista-te aqui</a>

    </div>

    

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
