@model Geres4U.Models.PointOfInterest

@{
    ViewData["Title"] = "GetSpecificPointOfInterest";
    Layout = "_LayoutAdmin";
    string categoryString = "Categoria: " + @Model.Category;
    var coordinatesString = "https://maps.google.com/?q=" + @Model.GetLatString() + "," + @Model.GetLonString();
    var idString = "ID: " + @Model.Id;

}

@if (ViewBag.result != null)
{
    <p>@ViewBag.result</p>
}

<h1 style="position: absolute; left: 600px; top: 150px">Ponto de interesse</h1>

<div>
    
    <dl class="row" style="position: absolute; top: 200px; left: 600px;">
        <dd class="col-sm-10" style="font-weight: bold; font-size: 20px; padding: 10px">
            @Html.Raw(idString)
        </dd>
        <dd class="col-sm-10" style="font-weight: bold; color: green; font-size: 20px; padding-bottom: 10px">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dd class="col-sm-10">
            @if (!String.IsNullOrEmpty(Model.ImagePath))
            {
                <img src="@Url.Content("~/Images/" + @Model.ImagePath)" alt="Erro rendering" width="256px" height="256px"/>
            } else
            {
                <img src="@Url.Content("~/Images/noImage.png")" alt="Erro rendering" width="256px" height="256px"/>
            }
        </dd>
        <dd class="col-sm-10" style="padding: 30px">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dd class="col-sm-10" style="font-weight: bold; padding: 10px">
            @Html.Raw("Coordenadas:")
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lat)
            <a href=@coordinatesString target="_blank" class="btn btn-primary" style="position: relative; text-align: center; left: 120px; top: 20px; height: 50px;background: #F2B23E; border-radius: 17.5px; color: white;">Abrir no Maps</a>
        </dd>
        <dd class="col-sm-10" style="padding-bottom: 50px">
            @Html.DisplayFor(model => model.Long)
        </dd>
        <dd class="col-sm-4" style="width: 100px; height: 37px; background: #000000; border-radius: 17.5px; color: white;">
            @Html.Raw(categoryString)
        </dd>
    </dl>
</div>
<div>
    @if (((string) (ViewBag.returning)).Equals("GetSugestions")) 
    {
        <a asp-action="AcceptPointOfInterestSugestion" asp-route-id=@ViewBag.id style="position: absolute; left: 650px; top: 100px; color: black;font-weight:bold">Aprovar</a>
        <a></a>
        <a asp-action="RejectPointOfInterestSugestion" asp-route-id=@ViewBag.id style="position: absolute; left: 750px; top: 100px; color: black;font-weight:bold">Rejeitar</a>
    }
    <a asp-action=@ViewBag.returning  style="position: absolute; left: 500px; top: 100px; color: black;font-weight:bold">Voltar</a>
</div>
